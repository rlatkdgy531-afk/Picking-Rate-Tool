<Window x:Class="Pcnt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pcnt"
        mc:Ignorable="d"
        Title="Picking Rate" Height="450" Width="400"
        Background="AntiqueWhite" WindowStyle="SingleBorderWindow"
        >


    <Grid KeyboardNavigation.DirectionalNavigation="None" Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--상단 성공률 표시-->
        <TextBlock Grid.Row="0"
                   Text="{Binding AsyncState=}"
                   FontSize="10"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"/>
        <!--버튼표시-->
        <Grid Grid.Row="1" Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        
        <!--왼쪽버튼-->
        <Button Grid.Column="0"
                Content="False"
                Command="{Binding FailCommand}"
                Background="Red" Foreground="White"
                FontSize="18" FontWeight="Bold"
                Margin="10"
                Focusable="False" IsTabStop="False"/>
        <!--오른쪽 버튼-->
        <Button Grid.Column="1"
                Content="Success"
                Command="{Binding FailCommand}"
                Background="Green" Foreground="White"
                FontSize="18" FontWeight="Bold"
                Margin="10"
                Focusable="False" IsTabStop="False"/>

    </Grid>
    <TextBlock 

</Window>
